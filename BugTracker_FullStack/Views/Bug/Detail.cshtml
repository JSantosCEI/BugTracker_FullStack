@model Bug
@{
    ViewData["Title"] = "Bugs";
}

<div class="row justify-content-md-center">
    <div class="col-5">
        <div class="card" style="margin: 0 auto">
            <div class="card-body py-3 px-4">
                <h4 class="card-title text-center">@Model.BugName</h4>
                <div class="mb-1">
                    <div class="fw-bold fs-6">
                        Description:
                    </div> 
                    <div>
                        @Model.Description
                    </div>
                </div>
                <div class="mb-1">
                    <div class="fw-bold fs-6">
                        Priority:
                    </div> 
                    <div>
                        @Model.Priority
                    </div>
                </div>
                <div class="">
                    <div class="fw-bold fs-6">
                        Status:
                    </div> 
                    <div>
                        @Model.Status
                    </div>
                </div>
            </div>
            <div class="card-footer text-muted">
                <div class="d-flex justify-content-between">
                    <div>
                        <a asp-controller="Bug" asp-action="Edit" asp-route-id="@Model.BugId" class="btn btn-success">
                            <i class="bi bi-pencil-square"></i> Edit
                        </a>
                        <a asp-controller="Bug" asp-action="Index" class="btn btn-secondary">
                            <i class="bi bi-arrow-return-left"></i> Back
                        </a>
                    </div>
                    <a asp-controller="Bug" asp-action="Delete" asp-route-id="@Model.BugId" class="btn btn-danger">
                        <i class="bi bi-trash"></i>
                    </a>
                </div>
            </div>
        </div>
    </div>
</div>
